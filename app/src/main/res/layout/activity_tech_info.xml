<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TechInfoActivity" android:id="@+id/techInfoLayout">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/back_icon" android:id="@+id/backIcon"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:padding="10dp"/>
    <TextView
            android:text="Nom de la voiture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/carName"
            app:layout_constraintTop_toTopOf="@+id/backIcon" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/backIcon"
            android:textSize="@dimen/tech_info_text_size"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/car_picture"
            android:id="@+id/carPicture" android:layout_weight="1"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/carName"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>