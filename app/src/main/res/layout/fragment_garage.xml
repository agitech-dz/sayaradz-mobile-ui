<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.GarageFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@color/colorPrimary"
                android:elevation="5dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/constraintLayout2">

            <TextView
                    android:text="@string/title_garage"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragmentTitle" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:textStyle="bold"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/contentLayout"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/priceTab"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:theme="@style/priceTab"
                    app:layout_constraintEnd_toStartOf="@+id/checkButton" android:layout_marginEnd="8dp">

                <TextView
                        android:text="@string/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView17"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"/>
                <TextView
                        android:text="@string/dzd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintTop_toTopOf="@+id/textView17"
                        app:layout_constraintBottom_toBottomOf="@+id/textView17"/>
                <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/priceTag"
                        app:layout_constraintTop_toTopOf="@+id/textView17"
                        app:layout_constraintBottom_toBottomOf="@+id/textView17"
                        app:layout_constraintEnd_toStartOf="@+id/textView20" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@+id/textView17" android:layout_marginStart="24dp"
                />
            </android.support.constraint.ConstraintLayout>
            <ImageButton
                    android:src="@drawable/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkButton"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/priceTab"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/priceTab"
                    android:contentDescription="@string/ckeck_button" android:layout_marginEnd="64dp"
            />
            <TextView
                    android:text="Vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="17sp"
                    android:textColor="@color/colorPrimary"/>
            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/marque"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" android:layout_marginTop="20dp"/>
            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/model"
                    app:layout_constraintEnd_toEndOf="@+id/marque" app:layout_constraintStart_toStartOf="@+id/marque"
                    android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/marque"/>
            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/versionTxt"
                    app:layout_constraintEnd_toEndOf="@+id/model" app:layout_constraintStart_toStartOf="@+id/model"
                    app:layout_constraintTop_toBottomOf="@+id/model" android:layout_marginTop="18dp"/>
            <TextView
                    android:text="Color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/versionTxt" android:layout_marginTop="20dp"
                    android:textSize="17sp" android:textColor="@color/colorPrimary"/>
            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/color"
                    app:layout_constraintStart_toStartOf="@+id/versionTxt"
                    app:layout_constraintEnd_toEndOf="@+id/versionTxt"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="Options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15"
                    app:layout_constraintStart_toStartOf="@+id/textView14"
                    app:layout_constraintTop_toBottomOf="@+id/color" android:layout_marginTop="20dp"
                    android:textSize="17sp" android:textColor="@color/colorPrimary"/>
            <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@+id/color" app:layout_constraintEnd_toEndOf="@+id/color"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/checkButton" android:layout_marginBottom="16dp"
                    android:id="@+id/optionsContainer">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical" android:id="@+id/options"/>
            </ScrollView>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/cover" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:background="@color/transparentWhite"
                android:visibility="invisible">

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="280dp"
                android:layout_height="400dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/popupFail"
                android:background="@color/white"
                android:visibility="gone" android:padding="5dp"
                android:elevation="10dp" android:layout_margin="10dp" android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp" android:layout_marginStart="8dp">

            <ImageView
                    android:src="@drawable/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/close"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:padding="7dp"/>
            <ImageView
                    android:src="@drawable/warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/imageView5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.25"/>
            <TextView
                    android:text="Vehicle Not Found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView16"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="24dp" android:textSize="20sp"/>
            <TextView
                    android:text="The vehicle that you have composed does not exist in the supply."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView18"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="24dp" android:gravity="center"
                    android:layout_marginEnd="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="280dp"
                android:layout_height="400dp" android:id="@+id/popupSuccess"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:background="@color/white" android:elevation="10dp"
                android:layout_margin="10dp" android:padding="5dp" android:visibility="gone">

            <ImageView
                    android:src="@drawable/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/close2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent" android:padding="7dp"/>
            <ImageView
                    android:src="@drawable/found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/imageView7" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.25"/>
            <TextView
                    android:text="Vehicle Found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView19"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:textSize="20sp"/>
            <TextView
                    android:text="The vehicle that you have composed is available in the supply. You can make an order."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView21"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:gravity="center"/>
            <Button
                    android:text="Order"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" android:id="@+id/order"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:background="@drawable/rounded_button"
                    android:textColor="@color/white" android:elevation="5dp" android:textSize="12sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>