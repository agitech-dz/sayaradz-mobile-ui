<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Fragments.PostAdModelFragment">
    <data>
        <variable
                name="viewModel"
                type="com.example.sayaradz_mobile.viewmodel.AdSpinnersViewModel" />
    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/post_ad_model"
                    android:layout_width="287dp"
                    android:layout_height="72dp"
                    android:text="@string/post_ad_model"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/rubik_bold"
                    android:textSize="26sp"
                    android:textAlignment="center" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="52dp"
                    android:layout_marginEnd="16dp" android:layout_marginStart="16dp"/>
            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="center_horizontal"
                    app:mutableVisibility="@{viewModel.getLoadingVisibility()}"/>


            <Spinner
                    android:id="@+id/modelSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/post_ad_model"
                    android:layout_marginTop="100dp"
                    android:layout_margin="32dp"
                    android:textSize="36sp"
                    style="@style/Widget.MaterialComponents.Light.ActionBar.Solid"
                    android:spinnerMode="dialog"
                    app:entries="@{viewModel.modelEntries}"/>


            <Button
                    android:id="@+id/selectModelAction"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/offer_button"
                    android:text="Suivant"
                    android:fontFamily="@font/rubik_bold"
                    android:textSize="12sp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="16dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>