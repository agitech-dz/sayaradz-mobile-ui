<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:layout_margin="5dp"
                                             android:elevation="5dp">
    <android.support.v7.widget.CardView android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:cardUseCompatPadding="true"
                                        android:clickable="true" android:theme="@style/card"
                                        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:background="@color/white"
                android:layout_width="368dp"
                android:layout_height="134dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/carImage" app:srcCompat="@drawable/bmw"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="198dp"
                    android:layout_height="120dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/brandName"
                        android:gravity="center"
                        android:text="BMW "
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="40dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:text="2000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/brandNation"
                        android:textColor="#E91E63"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/brandName"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.269" android:layout_marginTop="24dp"/>
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>