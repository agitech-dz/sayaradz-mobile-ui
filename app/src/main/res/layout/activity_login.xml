<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.LoginActivity">

    <ImageView
            android:id="@+id/logo"

            android:layout_width="286dp"
            android:layout_height="122dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/skip_button"
            app:layout_constraintEnd_toStartOf="@+id/rightgl"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintStart_toStartOf="@+id/leftgl"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="68dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="355dp" />

    <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="24dp"
            android:text="Find your new car faster and easier"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/rightgl"
            app:layout_constraintHorizontal_bias="0.81"
            app:layout_constraintStart_toStartOf="@+id/leftgl"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
            android:id="@+id/textView14"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginTop="72dp"
            android:text="Sayara DZ"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/rightgl"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/leftgl"
            app:layout_constraintTop_toTopOf="@+id/logo" />

    <Button
            android:id="@+id/skipButton"
            android:layout_width="289dp"
            android:layout_height="51dp"
            android:layout_marginTop="337dp"
            android:layout_marginBottom="98dp"
            android:background="@drawable/skip_button"
            android:elevation="5dp"
            android:text="Skip"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rightgl"
            app:layout_constraintStart_toStartOf="@+id/leftgl"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />
</androidx.constraintlayout.widget.ConstraintLayout>