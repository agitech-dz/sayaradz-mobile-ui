<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.PostAdFinishFragment">
    <data>
        <variable
                name="viewModel"
                type="com.example.sayaradz_mobile.viewmodel.AdViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/post_ad_finish"
                android:layout_width="287dp"
                android:layout_height="72dp"
                android:text="@string/post_ad_finish"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_bold"
                android:textSize="24sp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"/>
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mutableVisibility="@{viewModel.getLoadingVisibility()}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal" android:id="@+id/progressBar"/>


        <Button
                android:id="@+id/finishPostAdAction"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/offer_button"
                android:text="Finish"
                android:fontFamily="@font/rubik_bold"
                android:textSize="12sp"
                android:layout_marginBottom="292dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="16dp"
                app:mutableVisibility="@{viewModel.getButtonsVisibility()}"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/post_ad_finish"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>