<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:layout_margin="5dp"
                                             android:elevation="5dp">
    <android.support.v7.widget.CardView android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:cardUseCompatPadding="true"
                                        android:clickable="true" android:theme="@style/card"
                                        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="368dp"
                android:layout_height="134dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="182dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/carImage" app:srcCompat="@drawable/bmw"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="198dp"
                    android:layout_height="120dp" tools:layout_editor_absoluteX="182dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/versionlName"
                        android:gravity="center"
                        android:text="BMW 520d"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="64dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

                <ToggleButton
                        android:id="@+id/followVersion"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/toggle_button_version"
                        android:textOn=""
                        android:textOff=""
                        android:focusable="false"
                        android:focusableInTouchMode="false"

                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="152dp"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"/>

                <TextView
                        android:text="Ferrari"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ModelName" android:textColor="#E91E63"
                        android:textSize="18sp" android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView18"
                        app:layout_constraintHorizontal_bias="0.433" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
                <TextView
                        android:text="Version :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="76dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.016"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18" android:text="Model : "
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/versionlName"/>
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>