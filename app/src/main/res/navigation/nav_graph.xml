<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/homeFragment">


        <fragment android:id="@+id/homeFragment"
                  android:name="com.example.sayaradz_mobile.Fragments.HomeFragment"
                  android:label="Home"
                  tools:layout="@layout/fragment_home">

                <action
                        android:id="@+id/action_homeFragment_to_modelFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim"
                        app:destination="@id/modelFragment" />
                <action
                        android:id="@+id/action_homeFragment_to_manufacturerFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim"
                        app:destination="@id/manufacturerFragment" />
                <action
                        android:id="@+id/action_homeFragment_to_versionFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim"
                        app:destination="@id/versionFragment" />
        </fragment>

        <fragment android:id="@+id/garageFragment"
                  android:name="com.example.sayaradz_mobile.Fragments.GarageFragment"
                  android:label="Garage"
                  tools:layout="@layout/fragment_garage">

        </fragment>

        <fragment android:id="@+id/inboxFragment"
                  android:name="com.example.sayaradz_mobile.Fragments.InboxFragment"
                  android:label="Inbox"
                  tools:layout="@layout/fragment_inbox">
                <action
                        android:id="@+id/action_inboxFragment_to_postOfferNotificationFragment"
                        app:destination="@id/postOfferNotificationFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim" />
                <action
                        android:id="@+id/action_inboxFragment_to_followedModelChangeNotificationFragment"
                        app:destination="@id/followedModelChangeNotificationFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim"/>
                <action
                        android:id="@+id/action_inboxFragment_to_followedVersionChangeNotificationFragment"
                        app:destination="@id/followedVersionChangeNotificationFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim"/>
                <action
                        android:id="@+id/action_inboxFragment_to_commandValidationNotificationFragment"
                        app:destination="@id/commandValidationNotificationFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim"/>
                <action
                        android:id="@+id/action_inboxFragment_to_acceptOfferNotificationFragment"
                        app:destination="@id/acceptOfferNotificationFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim"/>
        </fragment>

        <fragment android:id="@+id/postOfferNotificationFragment"
                  android:name="com.example.sayaradz_mobile.Fragments.PostOfferNotificationFragment"
                  android:label="Notification Details"
                  tools:layout="@layout/fragment_post_offer_notification">
                <argument android:name="notification" app:argType="com.example.sayaradz_mobile.Model.Notification"/>
        </fragment>

        <fragment android:id="@+id/followedVersionChangeNotificationFragment"
                android:name="com.example.sayaradz_mobile.Fragments.FollowedVersionChangeNotificationFragment"
                android:label="Profile"
                tools:layout="@layout/fragment_followed_version_change_notification">
                <argument android:name="notification" app:argType="com.example.sayaradz_mobile.Model.Notification"/>


        </fragment>

        <fragment android:id="@+id/followedModelChangeNotificationFragment"
                android:name="com.example.sayaradz_mobile.Fragments.FollowedModelChangeNotificationFragment"
                android:label="Profile"
                tools:layout="@layout/fragment_followed_model_change_notification">
                <argument android:name="notification" app:argType="com.example.sayaradz_mobile.Model.Notification"/>


        </fragment>

        <fragment android:id="@+id/commandValidationNotificationFragment"
                android:name="com.example.sayaradz_mobile.Fragments.CommandValidationNotificationFragment"
                android:label="Profile"
                tools:layout="@layout/fragment_command_validation_notification">
                <argument android:name="notification" app:argType="com.example.sayaradz_mobile.Model.Notification"/>

        </fragment>

        <fragment android:id="@+id/acceptOfferNotificationFragment"
                android:name="com.example.sayaradz_mobile.Fragments.AcceptOfferNotificationFragment"
                android:label="Profile"
                tools:layout="@layout/fragment_command_validation_notification">
                <argument android:name="notification" app:argType="com.example.sayaradz_mobile.Model.Notification"/>

        </fragment>

        <fragment android:id="@+id/profileFragment"
                  android:name="com.example.sayaradz_mobile.Fragments.ProfileFragment"
                  android:label="Profile"
                  tools:layout="@layout/fragment_profile">


        </fragment>



        <fragment android:id="@+id/adsFragment"
                  android:name="com.example.sayaradz_mobile.Fragments.AdsFragment"
                  android:label="Ads"
                  tools:layout="@layout/fragment_ads">
                <action
                        android:id="@+id/action_adsFragment_to_adDetailsFragment"
                        app:destination="@id/adDetailsFragment"
                        app:enterAnim="@anim/nav_default_pop_enter_anim"
                        app:exitAnim="@anim/nav_default_pop_exit_anim" />

        </fragment>

        <fragment android:id="@+id/adDetailsFragment"
                  android:name="com.example.sayaradz_mobile.Fragments.AdDetailsFragment"
                  android:label="Ad"
                  tools:layout="@layout/fragment_ad_details">
                <argument android:name="adId" app:argType="string"/>
        </fragment>
        <fragment
                android:id="@+id/manufacturerFragment"
                android:name="com.example.sayaradz_mobile.Fragments.ManufacturerFragment"
                android:label="ManufacturerFragment"
                tools:layout="@layout/fragment_manufacturer"/>
        <fragment
                android:id="@+id/modelFragment"
                android:name="com.example.sayaradz_mobile.Fragments.ModelFragment"
                android:label="ModelFragment"
                tools:layout="@layout/fragment_model"/>
        <fragment
                android:id="@+id/versionFragment"
                android:name="com.example.sayaradz_mobile.Fragments.VersionFragment"
                android:label="VersionFragment"
                tools:layout="@layout/fragment_version"/>


</navigation>